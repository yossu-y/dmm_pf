<% article.comments.each do |comment| %>

  <div class="balloon">

    <div class="faceicon">
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.get_profile_image, class: "icon-mini rounded-circle" %>
        <div class="text-dark">
          <%= truncate(comment.user.screen_name, length:9) %>
        </div>
      <% end %>
    </div>
    <div class="chatting">
      <div class="says">
        <p style="white-space: pre-wrap;"><%= comment.comment %></p>
      </div>
    </div>

    <div class="text-right" style="margin: -15px 5px 5px 0;">
      <div class="comment-date" style="margin: 10px 0 0 5px">
        <%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %>
      </div>
      <% if comment.user == current_user %>
        <%= link_to "削除", article_comment_path(comment.article, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>

  </div>

<% end %>
