<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">投稿編集</h3></div>
    <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
        <div class="img">
          <p>投稿されている画像</p>
          <%= image_tag @article.get_image, class: "show-img" %>
        </div>

      <%= form_with model: @article, local: true do |f| %>
        <div class="form-group">
          <%= f.label :image, "変更する画像" %><br>
          <%= f.file_field :image, class: "form" %>
        </div>

        <div class="form-group">
          <%= f.label :title, "タイトル" %><br>
          <%= f.text_field :title, class: "form" %>
        </div>

        <div class="form-group">
          <%= f.label :body, "記事の内容" %>
          <%= f.rich_text_area :body, class: "form" %>
        </div>

        <div class="form-group">
          <%= link_to "キャンセル", article_path(@article) %>
          <%= f.submit "投稿を更新", class: "form" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
