<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-5 mini-title">タグ一覧</h3></div>
    <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
      <% @tag_list.each do |list| %>
        <%= link_to tag_search_path(tag_id: list.id) do %>
          <%= list.name %>
          <%="(#{list.articles.count})" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
