<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-5"><h3 class="mb-3 mini-title">下書き一覧</h3></div>
    <div class="col-11 col-md-11 col-sm-11 mx-2 mx-sm-auto px-0 my-5">
      <table class="table table-hover table-inverse">
        <% @articles.each do |article| %>
        <tr>
          <td>
            <%= image_tag article.get_image, class: "posting-img" %>
          </td>
          <td><%= article.title %></td>
          <td><%= article.created_at.strftime("%Y年%m月%d日") %></td>
          <td><%= link_to "編集", edit_article_path(article), class: "btn btn-info" %></td>
          <td><%= link_to "下書きを削除", article_path(article), method: :delete, data: {confirm: "下書きを削除しますか？"}, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
