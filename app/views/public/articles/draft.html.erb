<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-5"><h3 class="mb-3 mini-title">下書き一覧</h3></div>
    <div class="col-12 col-md-12 col-sm-12 mx-2 mx-sm-auto px-0 my-5">
      <table class="table table-hover table-inverse">
        <% @articles.each do |article| %>
        <tr style="cursor: pointer" onclick="window.location.href='<%= edit_article_path(article) %>'" onmouseover="this.style.backgroundColor='#dcdcdc'" onmouseout="this.style.backgroundColor='#fff'">
          <td width="10%">
            <%= image_tag article.get_image, class: "posting-img" %>
          </td>
          <td><%= truncate(article.title, length:25) %></td>
          <td width="22%"><%= article.updated_at.strftime("%Y年%m月%d日") %></td>
          <td width="22%"><%= link_to "下書きを削除", article_path(article), method: :delete, data: {confirm: "下書きを削除しますか？"}, class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
