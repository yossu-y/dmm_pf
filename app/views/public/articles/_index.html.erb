<div class="container px-2">
  <div class="row">
    <div class="col-12 col-md-12 col-sm-12 mx-auto px-0 my-5 list">
      <% articles.each do |article| %>
        <div class="card">
          <div class="card-img">
            <%= link_to article_path(article.id) do %>
              <%= image_tag article.get_image, class: "card-img" %>
            <% end %>
          </div>
          <div class="card-body">
            <div class="card-title">
              <%= truncate(article.title, length:16) %>
            </div>
            <div class="card-icon">
              <%= link_to article.user, class: "text-dark" do %>
                <%= image_tag article.user.get_profile_image, class: "rounded-circle icon-mini" %>
                <%= truncate(article.user.screen_name, length:7) %>
              <% end %>
            </div>
            <div class="card-item">
              <span id="like_buttons_<%= article.id %>">
                <%= render "public/likes/btn", article: article %>
              </span>
              <div class="comments-counter">
                <%= render "public/comments/counter", article: article %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
