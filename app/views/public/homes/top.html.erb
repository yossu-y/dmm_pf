<% if user_signed_in? %>
  <div class="mx-3 text-center"><h1 class="mb-6 top-title">Leniect</h1></div>
    <div class="col-5 col-md-5 col-sm-5 mx-auto px-0 my-4">
      <div class="row">
        <%= link_to "マイページに戻る", user_path(current_user.id), class: "btn btn-login btn-sm btn-block mb-3 text-center" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="mx-3 text-center"><h1 class="mb-6 top-title top-title-home">Leniect</h1></div>
    <div class="col-5 col-md-5 col-sm-5 mx-auto px-0 my-4 text-center">
      <div class="row">
        <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-sm btn-block guest-login mb-3 text-center" %>
      </div>
      <div class="row">
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-login btn-sm btn-block mb-3 text-center" %>
      </div>
      <div class="row">
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-login btn-sm btn-block text-center" %>
      </div>
    </div>
  </div>
<% end %>

