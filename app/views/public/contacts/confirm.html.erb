<div class="container px-2">
  <div class="row">
    <div class="col-11 col-md-11 col-sm-11 mx-auto px-0 my-2">
      <div class="mx-1 mb-4 mt-5">
        <h3 class="mb-4 mini-title">お問い合わせ内容確認</h3>
      </div>

      <table class="table" style="border: none">
        <tr>
          <td style="width: 30%; border: none;">お名前：</td>
          <td style="border: none;"><%= @contact.name %></td>
        </tr>
        <tr>
          <td style="border: none;">メールアドレス：</td>
          <td style="border: none;"><%= @contact.email %></td>
        </tr>
        <tr>
          <td style="border: none;">お問い合わせ項目：</td>
          <td style="border: none;"><%= @contact.subject_i18n %></td>
        </tr>
        <tr style="border: none">
          <td style="border: none">お問い合わせ内容：</td>
          <td class="text-left" style="white-space: pre-wrap; border: none;"><%= @contact.message %></td>
        </tr>
        <tr>
          <td style="border: none;">
            <%= form_with model: @contact, url: contacts_back_path, method: :post, local: true do |f| %>
              <%= f.hidden_field :user_id %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :subject %>
              <%= f.hidden_field :message %>
              <%= f.hidden_field :progress_status %>
              <%= f.submit "入力確認に戻る", class: "btn btn-warning", style: "width: 150px" %>
            <% end %>
          </td>
          <td class="text-left" height="30px" style="border: none; margin-top: 40px">
            <%= form_with model: @contact, method: :post, local: true do |f| %>
              <%= f.hidden_field :user_id %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :subject %>
              <%= f.hidden_field :message %>
              <%= f.hidden_field :progress_status %>
              <%= f.submit "内容を確認して送信", class: "push-btn", style: "width: 200px" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
