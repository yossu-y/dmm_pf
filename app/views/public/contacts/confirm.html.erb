<table>
  <tbody>
    <tr>
      <td class="text-center" style="width: 30%;">お名前</td>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">メールアドレス</td>
      <td><%= @contact.email %></td>
    </tr>
    <tr>
      <td class="text-center" style="width: 30%;">メールアドレス</td>
      <td><%= @contact.subject %></td>
    </tr>
    <tr>
      <td class="text-center">メッセージ</td>
      <td style="white-space: pre-wrap;"><%= @contact.message %></td>
    </tr>

  </tbody>
</table>

<%= form_with model: @contact, url: contacts_path, method: :post, local: true  do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :subject %>
  <%= f.hidden_field :message %>
  <%= f.submit '送信' %>
<% end %>