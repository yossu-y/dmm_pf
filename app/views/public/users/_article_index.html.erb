<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-4 mini-title">過去の投稿</h3></div>
    <table class="table table-hover table-inverse">
      <% @articles.each do |article| %>
      <tr>
        <td>
          <%= image_tag article.get_image, class: "posting-img" %>
        </td>
        <td><%= article.title %></td>
        <td>
          <%= link_to article_path, class: "text-dark" do %>
            <button type="button" class="btn btn-outline-dark">詳細</button>
          <% end %>
        </td>
        <td id="like_buttons_<%= article.id %>">
          <%= render "public/likes/btn", article: article %>
        </td>
        <td class="comments-counter">
          <%= render "public/comments/counter", article: article %>
        </td>
        <td><%= article.created_at.strftime("%Y年%m月%d日") %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
