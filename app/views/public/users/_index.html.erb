<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12 col-md-12 col-sm-12 mx-2 mx-sm-auto px-0 my-5">
      <table class="table table-hover table-inverse" style="border: 1px solid black; border-collapse: collapse;">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <tr>
              <td width="15%"><%= image_tag user.get_profile_image, class: "rounded-circle icon-mini" %></td>
              <td width="15%">
                <%= link_to user_path(user), class: "text-dark", style: "text-decoration:underline" do %>
                  <%= user.screen_name %>
                <% end %>
              </td>
              <td><%= truncate(user.introduction, length:25) %></td>
              <td width="25%"><%= render "public/relationships/btn", user: user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>