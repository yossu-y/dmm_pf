<div class="container px-2">
  <div class="row">
    <div class="col-9 col-md-10 col-sm-12 mx-auto px-0 my-4">

      <table class="table table-hover table-inverse line" style="border: 1px solid black; border-collapse: collapse;">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
        <% users.each do |user| %>
          <tr style="cursor: pointer" onclick="window.location.href='<%= user_path(user) %>'" onmouseover="this.style.backgroundColor='#dcdcdc'" onmouseout="this.style.backgroundColor='#fff'">
            <td width="10%">
              <%= image_tag user.get_profile_image, class: "rounded-circle icon-mini" %>
            </td>
            <td width="20%"><%= truncate(user.screen_name, length:15) %></td>
            <td class="introduction"><%= truncate(user.introduction, length:30) %></td>
            <td width="25%"><%= render "public/relationships/btn", user: user %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
