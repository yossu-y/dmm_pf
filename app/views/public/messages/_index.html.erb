<% @messages.each do |message| %>
  <div class="balloon">
    <div class="faceicon">
      <%= link_to user_path(message.user) do %>
        <%= image_tag message.user.get_profile_image, class: "icon-mini rounded-circle" %>
        <div class="text-dark">&nbsp;<%= message.user.screen_name %></div>
      <% end %>
    </div>
    <div class="chatting">
      <div class="says">
        <p><%= message.message %></p>
      </div>
    </div>
    <div class="comment-date" style="margin: 10px 0 0 5px">
      <%= message.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </div>
    <div class="text-right" style="margin-top: -20px;">
      <% if message.user == current_user %>
        <%= link_to "削除", group_message_path(group, message), method: :delete, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
<% end %>