<% if article.liked_by?(current_user) %>
  <%= link_to article_like_path(article), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart" style="color: red;">
      <%= article.likes.count %>
    </i>
  <% end %>
<% else %>
  <%= link_to article_like_path(article), method: :post, remote: true do %>
    <i class="fa-solid fa-heart" style="color: red;">
      <%= article.likes.count %>
    </i>
  <% end %>
<% end %>