<% if article.liked_by?(current_user) %>
  <%= link_to article_like_path(article), method: :delete, remote: true, class: "text-dark" do %>
    <i class="fa-solid fa-heart mark" style="color: red;"></i>
    <%= article.likes.count %>&emsp;
  <% end %>
<% else %>
  <%= link_to article_like_path(article), method: :post, remote: true, class: "text-dark" do %>
    <i class="fa-regular fa-heart mark" style="color: red;"></i>
    <%= article.likes.count %>&emsp;
  <% end %>
<% end %>

