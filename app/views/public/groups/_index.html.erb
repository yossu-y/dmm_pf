<div class="container px-2">

  <div style="text-align: right;">
    <%= link_to new_group_path do %>
      <button type="button" class="btn btn-outline-dark", style="margin-top:10px ">
        コミュニティを作成<i class="fa-solid fa-people-group mark"></i>
      </button>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12 col-md-12 col-sm-12 mx-auto px-0 my-3 list">
      <% groups.each do |group| %>
        <div class="group-card">
        <%= link_to group_path(group.id) do %>
          <div class="card-img">
            <%= image_tag group.get_image, class: "card-img" %>
          </div>
          <div class="card-body">
            <div class="card-title">
              <%= truncate(group.name, length:15) %>
            </div>
            <div class="card-text text-dark" style="">
              <strong><%= group.users.count %></strong>人が参加中
            </div>
        <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
