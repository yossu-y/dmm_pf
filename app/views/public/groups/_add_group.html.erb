<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-4 mini-title">参加中のコミュニティ</h3></div>
    <table class="table table-hover table-inverse">
      <% @groups.each do |group| %>
      <tr style="cursor: pointer" onclick="window.location.href='<%= group_path(group) %>'" onmouseover="this.style.backgroundColor='#dcdcdc'" onmouseout="this.style.backgroundColor='#fff'">
        <td>
          <%= image_tag group.get_image, class: "posting-img" %>
        </td>
        <td><%= group.name %></td>
        <td width="15%"><%= group.users.count %>人が参加</td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
