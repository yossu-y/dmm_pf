<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-4 mini-title">参加中のコミュニティ</h3></div>
    <table class="table table-hover table-inverse">
      <% @groups.each do |group| %>
      <tr>
        <td>
          <%= image_tag group.get_image, class: "posting-img" %>
        </td>
        <td><%= group.name %></td>
        <td><%= link_to "詳細", group_path, class: "text-dark" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
