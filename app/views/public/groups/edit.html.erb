<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-3 mini-title">コミュニティ編集</h3></div>
    <div class="col-10 col-md-10 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
      <%= render "layouts/errors", obj: @group %>
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :コミュニティ画像 %><br>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :コミュニティ名 %><br>
          <%= f.text_field :name, class: "form form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :コミュニティの概要 %><br>
          <%= f.text_area :introduction, class: "form-control", rows: 20 %>
        </div>
        <div class="actions">
          <%= link_to "キャンセル", group_path(@group), class: "btn btn-light" %>
          <%= f.submit :コミュニテイを更新, class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
