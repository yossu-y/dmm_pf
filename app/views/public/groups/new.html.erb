<div class="container px-2">
  <div class="row">
    <div class="col-11 col-md-11 col-sm-11 mx-auto px-0 my-5">
      <div class="mx-1"><h3 class="mb-3 mini-title">コミュニティを作る</h3></div>
      <%= render "layouts/errors", obj: @group %>

      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <%= f.label :コミュニティ画像 %><br>
          <%= f.file_field :image %>
        </div>
        <div class="form-group">
          <%= f.label :コミュニティ名 %><br>
          <%= f.text_field :name, class: "form form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :コミュニティ紹介 %><br>
          <%= f.text_area :introduction, class: "form-control", rows: 20 %>
        </div>
        <div class="actions">
          <%= link_to "キャンセル", groups_path, class: "btn btn-light" %>
          <%= f.submit "コミュニティを作成", class: "btn btn-info" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
