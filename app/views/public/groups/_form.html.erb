<%= form_with model: group, local: true do |f| %>

  <div class="form-group">
    <%= f.label :グループ画像 %><br>
    <%= f.file_field :image, class: "" %>
  </div>

  <div class="form-group">
    <%= f.label :グループ名 %><br>
    <%= f.text_field :name, class: "form" %>
  </div>

  <div class="form-group">
    <%= f.label :グループの概要 %><br>
    <%= f.text_area :introduction, class: "form-group-info" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>

<% end %>
