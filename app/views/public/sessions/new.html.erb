<div class="container">
  <%= render "layouts/errors", obj: @user %>
	<div class="login-container">
    <div id="output"></div>
    <div class="avatar">
      <h3 class="site-name">Leniect</h3>
    </div>
    <div class="form-box">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "email-form" %>
        <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "password-form" %>
        <%= f.submit "ログイン", class: "btn-login" %>
      <% end %>
    </div>
    <div class="devise-link">
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>





