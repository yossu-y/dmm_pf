<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-4 mini-title">ユーザー一覧</h3></div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>詳細</th>
          <th style="text-align: center">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.screen_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "詳細", admin_user_path(user) %></td>
          <td style="text-align: center">
            <% if user.active_for_authentication? %>
              <b class="text-info">有効</b>
            <% else %>
              <b class="text-muted">退会</b>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>