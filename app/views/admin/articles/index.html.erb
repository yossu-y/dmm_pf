<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-3"><h3 class="mb-4 mini-title">投稿一覧</h3></div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>ID</th>
          <th>記事のタイトル</th>
          <th>投稿者</th>
          <th style="padding-left: 20px">投稿日(更新)</th>
          <th>詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.user.screen_name %></td>
          <td><%= article.updated_at.strftime("%Y年%m月%d日") %></td>
          <td><%= link_to "詳細", admin_article_path(article) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>