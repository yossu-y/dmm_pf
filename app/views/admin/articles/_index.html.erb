<div class="container px-2">
  <div class="row">
    <div class="col-12 col-md-12 col-sm-12 mx-auto px-0 my-5">
      <div class="mx-3"><h3 class="mb-4 mini-title">投稿一覧</h3></div>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th width="10%">ID</th>
            <th>記事のタイトル</th>
            <th width="30%">投稿者</th>
            <th width="23%">投稿日</th>
          </tr>
        </thead>
        <tbody>
          <% articles.each do |article| %>
          <tr style="cursor: pointer" onclick="window.location.href='<%= admin_article_path(article) %>'" onmouseover="this.style.backgroundColor='#dcdcdc'" onmouseout="this.style.backgroundColor='#fff'">
            <td><%= article.id %></td>
            <td><%= truncate(article.title, length:25) %></td>
            <td><%= truncate(article.user.screen_name, length:20) %></td>
            <td><%= article.created_at.strftime("%Y年%m月%d日") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
