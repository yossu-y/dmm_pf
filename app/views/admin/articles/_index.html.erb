<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-11 col-md-11 col-sm-11 mx-2 mx-sm-auto px-0 my-5">
      <div class="mx-3"><h3 class="mb-4 mini-title">投稿一覧</h3></div>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ID</th>
              <th>記事のタイトル</th>
              <th>投稿者</th>
              <th>投稿日</th>
              <th>詳細</th>
            </tr>
          </thead>
          <tbody>
            <% articles.each do |article| %>
            <tr>
              <td><%= article.id %></td>
              <td><%= truncate(article.title, length:25) %></td>
              <td><%= article.user.name %></td>
              <td><%= article.created_at.strftime("%Y年%m月%d日") %></td>
              <td><%= link_to "詳細", admin_article_path(article), class: "btn btn-info" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
