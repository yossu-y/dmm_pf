<div class="container">
  <div class="mt-1"><h3 class="title ml-8">管理者ログイン</h3></div>
	<div class="login-container">
    <div id="output"></div>
    <div class="avatar">
      <h3 class="site-name">Leniect</h3>
    </div>
    <div class="form-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス",  autocomplete: "email", class: "email-form" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "password-form" %>
        <%= f.submit "ログイン", class: "btn-login" %>
      <% end %>
    </div>
  </div>
</div>


