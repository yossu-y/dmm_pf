<div class="container px-5 px-sm-0">
  <div class="row">
    <h3 class="title">コミュニティ詳細</h3>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td colspan="2">
              <%= image_tag @group.get_image, class: "my_page_img" %>
            </td>
          </tr>
          <tr>
            <td>投稿ID</td>
            <td><%= @group.id %></td>
          </tr>
          <tr>
            <td>コミュニティ名</td>
            <td><%= @group.name %></td>
          </tr>
          <tr>
            <td>コミュニティ説明</td>
            <td><%= @group.introduction %></td>
          </tr>
          <tr>
            <td>参加人数</td>
            <td><%= @group.users.count %></td>
          </tr>
          <tr>
            <td>コミュニティオーナー</td>
            <td><%= @group.owner.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

